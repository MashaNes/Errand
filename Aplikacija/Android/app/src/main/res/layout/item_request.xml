<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/colorWhite"
	android:descendantFocusability="blocksDescendants"
	android:padding="8dp">

	<ImageView
		android:id="@+id/item_request_status"
		android:contentDescription="@string/image_cd_request_status"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_width="wrap_content"
		android:layout_height="0dp"/>

	<TextView
		android:id="@+id/item_request_name"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/item_request_status"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:lines="1"
		android:maxLines="1"
		android:paddingBottom="2dp"
		android:textSize="16sp"
		android:textColor="@color/colorBlack"/>

	<TextView
		android:id="@+id/item_request_date"
		app:layout_constraintTop_toBottomOf="@id/item_request_name"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/item_request_status"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="2dp"
		android:textSize="12sp"/>

	<TextView
		android:id="@+id/item_request_note"
		app:layout_constraintTop_toBottomOf="@id/item_request_date"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/item_request_status"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="2dp"
		android:textSize="12sp"/>

	<HorizontalScrollView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:paddingTop="4dp"
		app:layout_constraintTop_toBottomOf="@id/item_request_note"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/item_request_status"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:scrollbars="none"
		android:overScrollMode="never"
		android:fadingEdge="horizontal"
		android:requiresFadingEdge="horizontal"
		android:fadingEdgeLength="32dp">

		<LinearLayout
			android:id="@+id/item_request_services"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:descendantFocusability="blocksDescendants"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"/>
	</HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>